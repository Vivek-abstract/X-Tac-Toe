<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:gravity="center"
    android:paddingBottom="1pt"
    android:paddingTop="10pt"
    tools:context="com.example.whiter0se.startuptemplate.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3pt"
        android:gravity="center">

        <Button
            android:id="@+id/btn1"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:layout_marginRight="3pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:layout_marginRight="3pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3pt"
        android:gravity="center">

        <Button
            android:id="@+id/btn4"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:layout_marginRight="3pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:layout_marginRight="3pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn7"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:layout_marginRight="3pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:layout_marginRight="3pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="38pt"
            android:layout_height="38pt"
            android:background="#282a36"
            android:onClick="buClick"
            android:textSize="36sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20pt"
        android:gravity="center">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorX"
            android:onClick="newGame"
            android:text="New Game"
            android:textSize="12sp" />
    </TableRow>
</TableLayout>
